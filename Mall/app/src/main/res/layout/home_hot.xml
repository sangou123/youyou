<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_height="@dimen/dp_130">
    <View
        android:background="#D6D3D3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/hot_img"

            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"/>
        <TextView
            android:id="@+id/hot_title"
            android:textSize="@dimen/dp_15"
           android:layout_toRightOf="@id/hot_img"
            android:textColor="#000"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="11111111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/hot_usetitle"
            android:textSize="@dimen/dp_12"
            android:layout_toRightOf="@id/hot_img"
            android:layout_below="@id/hot_title"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="11111111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/hot_price"
            android:textSize="@dimen/dp_15"
            android:layout_toRightOf="@id/hot_img"
            android:layout_below="@id/hot_usetitle"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="#E31212"
            android:text="11111111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</RelativeLayout>