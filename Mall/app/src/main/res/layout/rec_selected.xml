<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   android:padding="@dimen/dp_10"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/selected_img"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_150"/>
   <TextView

       android:layout_below="@id/selected_img"
       android:id="@+id/selected_title"
       android:layout_width="wrap_content"
       android:textColor="#000"
       android:maxEms="15"
       android:text="111111111"

       android:textSize="@dimen/dp_15"
       android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/selected_title"
        android:layout_below="@id/selected_img"
        android:id="@+id/selected_price"
        android:layout_width="wrap_content"
        android:textColor="#D10F0F"
        android:text="111111111"
        android:textSize="@dimen/dp_15"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/selected_title"
        android:id="@+id/selected_usertitle"
        android:layout_width="wrap_content"
        android:text="111111111"
        android:textSize="@dimen/dp_12"
        android:maxEms="18"
        android:ellipsize="end"
        android:layout_height="wrap_content"/>

</RelativeLayout>